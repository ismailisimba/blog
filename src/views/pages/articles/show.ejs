<%- include('../../partials/_header', { user: user }) %>

<!-- 
  I've added dark:bg-gray-900 here as a container background for dark mode.
  If your _header already sets a dark mode body background, you can remove this.
-->
<div class="max-w-4xl mx-auto p-4 dark:bg-gray-600">
  <% if (article.headerImageUrl) { %>
    <img src="<%= article.headerImageUrl %>" alt="<%= article.title %> header image" class="w-full rounded-lg shadow-lg mb-8" style="max-height: 500px; object-fit: cover;">
  <% } %>
  
  <!-- Added dark mode text color -->
  <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-gray-100 mb-4"><%= article.title %></h1>
  <p class="text-gray-500 dark:text-gray-400 mb-8">By <%= article.author.name %> on <%= article.createdAt.toDateString() %></p>
  
  <!-- 
    The 'prose' classes are great for this. 
    Added dark:prose-invert for dark mode article text.
  -->
  <div class="article-content prose lg:prose-xl max-w-none dark:prose-invert text-gray-900 dark:text-gray-100">
    <%- htmlContent %>
  </div>

  <hr class="my-12 dark:border-gray-700">

  <section class="comments-section">
  <!-- Added dark mode text color -->
  <h1 class="text-2xl font-bold mb-6 text-center text-gray-900 dark:text-gray-100">Comments</h1>
  
<% if (user && !article.published && (user.id === article.author.id || user.role === 'ADMIN' || user.role === 'MODERATOR')) { %>
  <div class="mb-8">
    <a href="/articles/<%= article.slug %>/edit" class="
              px-4 py-2 
              bg-blue-600 text-white 
              font-semibold rounded-lg shadow-md 
              hover:bg-blue-700 
              focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2
              dark:focus:ring-offset-gray-900
          ">
      Edit Article
    </a>
  </div>
<% } %>

<% if (user && user.role === 'ADMIN') { %>
  <div class="admin-actions bg-yellow-100 border border-yellow-300 text-yellow-800 p-4 rounded-md mb-8">
    <h4 class="font-bold">Admin Actions</h4>
    <form action="/articles/<%= article.slug %>/toggle-feature" method="POST" class="inline-block">
      <button type="submit" class="bg-primary text-white px-4 py-2 rounded-md hover:bg-accent transition duration-300">
        <%= article.isFeatured ? 'Unfeature this Article' : 'Feature this Article' %>
      </button>
    </form>
  </div>
<% } %>

  <% if (user) { %>
    <!-- Comment Form for logged-in users -->
    <form action="/articles/<%= article.slug %>/comments" method="POST" class="space-y-6 mb-12">
      <textarea name="text" placeholder="Join the discussion..." required class="
              block w-full min-h-[150px] p-3
              text-gray-900 placeholder-gray-500
              bg-white
              border border-gray-300 rounded-lg shadow-sm
              transition-colors duration-150 ease-in-out
              focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent
              dark:bg-gray-800 dark:border-gray-600 dark:text-white dark:placeholder-gray-400
              dark:focus:ring-blue-600 dark:focus:border-blue-600
            "></textarea>
      
      <!-- 
        FIX: Added Tailwind classes to the submit button
        to match the style from tailwind-textarea.html
      -->
      <button 
          type="submit" 
          class="
              px-4 py-2 
              bg-blue-600 text-white 
              font-semibold rounded-lg shadow-md 
              hover:bg-blue-700 
              focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2
              dark:focus:ring-offset-gray-900
          "
      >
          Post Comment
      </button>
    </form>
  <% } else { %>
    <!-- 
      FIX: Styled the login link and added dark mode text color 
    -->
    <p class="text-center text-gray-600 dark:text-gray-400 mb-12">
      <a href="/login" class="text-blue-600 hover:text-blue-700 dark:text-blue-500 dark:hover:text-blue-400 font-semibold">Log in</a> to post a comment.
    </p>
  <% } %>

  <!-- Display existing comments -->
  <div class="comments-list space-y-6">
    <% if (article.comments.length > 0) { %>
      <% article.comments.forEach(comment => { %>
        <!-- 
          FIX: Added styling to each comment card 
        -->
        <div class="comment bg-white dark:bg-gray-800 p-4 rounded-lg shadow-md border dark:border-gray-700">
          <div class="flex justify-between items-center mb-2">
            <p class="font-semibold text-gray-900 dark:text-gray-100"><%= comment.author.name %></p>
            <small class="text-gray-500 dark:text-gray-400"><%= comment.createdAt.toLocaleString() %></small>
          </div>
          <p class="text-gray-700 dark:text-gray-300"><%= comment.text %></p>
        </div>
      <% }) %>
    <% } else { %>
      <!-- FIX: Added dark mode text color -->
      <p class="text-center text-gray-500 dark:text-gray-400">No comments yet. Be the first!</p>
    <% } %>
  </div>
</section>
</div>

<%- include('../../partials/_footer') %>