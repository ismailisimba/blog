<%- include('../../partials/_header') %>

<main class="container mx-auto my-12 px-4">
    <div class="max-w-6xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">User Management</h1>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-x-auto">
            <table class="w-full text-left">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th class="p-4 font-semibold text-gray-600 dark:text-gray-300">Name</th>
                        <th class="p-4 font-semibold text-gray-600 dark:text-gray-300">Email</th>
                        <th class="p-4 font-semibold text-gray-600 dark:text-gray-300">Role</th>
                        <th class="p-4 font-semibold text-gray-600 dark:text-gray-300">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-600">
                    <% users.forEach(u => { %>
                        <tr class="text-gray-700 dark:text-gray-300">
                            <td class="p-4"><%= u.name %></td>
                            <td class="p-4"><%= u.email %></td>
                            <td class="p-4">
                                <span class="px-2 py-1 text-sm font-semibold leading-tight rounded-full
                                    <% if (u.role === 'ADMIN') { %> bg-red-100 text-red-700 dark:bg-red-700 dark:text-red-100 <% } %>
                                    <% if (u.role === 'MODERATOR') { %> bg-green-100 text-green-700 dark:bg-green-700 dark:text-green-100 <% } %>
                                    <% if (u.role === 'USER') { %> bg-gray-100 text-gray-700 dark:bg-gray-600 dark:text-gray-100 <% } %>
                                ">
                                    <%= u.role %>
                                </span>
                            </td>
                            <td class="p-4">
                                <% if (u.role !== 'ADMIN') { %>
                                    <form action="/admin/users/<%= u.id %>/toggle-moderator" method="POST">
                                        <button type="submit" class="text-sm font-bold py-2 px-3 rounded-md transition-colors
                                            <% if (u.role === 'USER') { %>
                                                bg-blue-500 hover:bg-blue-600 text-white
                                            <% } else { %>
                                                bg-yellow-500 hover:bg-yellow-600 text-white
                                            <% } %>
                                        ">
                                            <%= u.role === 'USER' ? 'Make Moderator' : 'Remove Moderator' %>
                                        </button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<%- include('../../partials/_footer') %>
