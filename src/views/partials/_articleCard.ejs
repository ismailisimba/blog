<div class="article-card bg-white rounded-lg shadow-md overflow-hidden transform hover:-translate-y-1 transition-transform duration-300">
  <% if (article.headerImageUrl) { %>
    <a href="/articles/<%= article.slug %>">
      <img class="w-full h-48 object-cover" src="<%= article.headerImageUrl %>" alt="<%= article.title %>">
    </a>
  <% } %>
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2">
      <a href="/articles/<%= article.slug %>" class="hover:text-primary transition-colors"><%= article.title %></a>
    </h3>
    <small class="text-gray-500">By <%= article.author.name %> | Views: <%= article.viewCount %></small>
  </div>
</div>
