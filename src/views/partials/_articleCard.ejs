<div class="article-card bg-gray-900 rounded-lg shadow-md overflow-hidden transform hover:-translate-y-1 transition-transform duration-300">
  <% if (article.headerImageUrl) { %>
    <a href="/articles/<%= article.slug %>">
      <img class="w-full h-48 object-cover" src="<%= article.headerImageUrl %>" alt="<%= article.title %>">
    </a>
  <% } %>
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2 text-gray-200">
      <a href="/articles/<%= article.slug %>" class="hover:text-primary transition-colors"><%= article.title %></a>
    </h3>
    <small class="text-gray-200">By <%= article.author.name %> | Views: <%= article.viewCount %></small>
  </div>
  <!-- Date Display Snippet -->
<div class="p-6 text-gray-200">
  <%= new Date(article.createdAt).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
    timeZone: 'Africa/Nairobi' 
  }) %>
</div>

</div>
