<!-- Cropper Initialization Script (only for create/edit pages) -->
<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.querySelector('.articleForm');
        // Only run this script if we are on a page with the article form
        if (!form) return;

        const headerImageInput = document.getElementById('headerImage');
        const modal = document.getElementById('cropperModal');
        const imageToCrop = document.getElementById('imageToCrop');
        const cropButton = document.getElementById('cropButton');
        const cancelCrop = document.getElementById('cancelCrop');
        const imagePreviewContainer = document.getElementById('imagePreviewContainer');
        let cropper;
        let originalFile;

        headerImageInput.addEventListener('change', (e) => {
            const files = e.target.files;
            if (files && files.length > 0) {
                originalFile = files[0];
                const reader = new FileReader();
                reader.onload = (event) => {
                    imageToCrop.src = event.target.result;
                    modal.classList.remove('hidden');
                    cropper = new Cropper(imageToCrop, {
                        aspectRatio: 16 / 9,
                        viewMode: 1,
                        autoCropArea: 0.9,
                    });
                };
                reader.readAsDataURL(originalFile);
            }
        });

        cropButton.addEventListener('click', () => {
            if (!cropper) return;

            cropper.getCroppedCanvas({
                width: 960,
                height: 540,
                imageSmoothingQuality: 'high',
            }).toBlob((blob) => {
                // Create a new File object from the blob
                const croppedFile = new File([blob], originalFile.name, {
                    type: 'image/jpeg',
                    lastModified: Date.now()
                });

                // Use the DataTransfer API to create a new FileList
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(croppedFile);

                // Replace the original file input's files with the new FileList
                headerImageInput.files = dataTransfer.files;

                // Update the preview
                const previewUrl = URL.createObjectURL(blob);
                imagePreviewContainer.innerHTML = `<img src="${previewUrl}" class="max-w-xs rounded" alt="Image preview">`;

                closeModal();
            }, 'image/jpeg', 0.85); // 0.85 quality
        });

        // --- UPDATED SECTION ---
        cancelCrop.addEventListener('click', () => {
             // Only clear the input if the user actually Cancelled
            headerImageInput.value = ''; 
            imagePreviewContainer.innerHTML = ''; // Optional: clear preview on cancel
            closeModal();
        });

        function closeModal() {
            if (cropper) {
                cropper.destroy();
                cropper = null;
            }
            modal.classList.add('hidden');
        }
    });
</script>

